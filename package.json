{
	"name": "unwalled",
	"version": "0.1.0",
	"private": true,
	"license": "MIT",
	"author": {
		"name": "Mayank Verma",
		"email": "errmayank@gmail.com",
		"url": "https://errmayank.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/errmayank/unwalled.git"
	},
	"scripts": {
		"dev": "next dev -p 4000",
		"format": "prettier --write \"**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,json,md,yaml,yml}\"",
		"format:check": "prettier --check \"**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,json,md,yaml,yml}\"",
		"lint": "next lint --max-warnings=0 --ignore-path ./.gitignore",
		"build": "next build",
		"start": "next start",
		"pages:build": "pnpm next-on-pages",
		"pages:deploy": "pnpm pages:build && wrangler pages deploy .vercel/output/static",
		"pages:watch": "pnpm next-on-pages --watch",
		"pages:dev": "pnpm wrangler pages dev .vercel/output/static --compatibility-date=2023-11-21 --compatibility-flag=nodejs_compat",
		"migration:generate": "drizzle-kit generate:sqlite --config=drizzle.config.js",
		"migration:push": "drizzle-kit push:sqlite --config=drizzle.config.js"
	},
	"dependencies": {
		"@libsql/client": "0.4.0-pre.5",
		"@radix-ui/react-dropdown-menu": "2.0.6",
		"@radix-ui/react-slot": "1.0.2",
		"@radix-ui/react-toast": "1.1.5",
		"cheerio": "1.0.0-rc.12",
		"class-variance-authority": "0.7.0",
		"clsx": "2.0.0",
		"dayjs": "1.11.10",
		"drizzle-orm": "0.29.1",
		"geist": "1.2.0",
		"lucide-react": "0.294.0",
		"next": "14.0.3",
		"next-themes": "0.2.1",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"tailwind-merge": "2.1.0",
		"tailwindcss-animate": "1.0.7",
		"validator": "13.11.0",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@cloudflare/next-on-pages": "1.8.2",
		"@tailwindcss/typography": "0.5.10",
		"@types/node": "20.10.4",
		"@types/react": "18.2.43",
		"@types/react-dom": "18.2.17",
		"@types/validator": "13.11.7",
		"autoprefixer": "10.4.16",
		"drizzle-kit": "0.20.6",
		"eslint": "8.55.0",
		"eslint-config-next": "14.0.4",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-next-on-pages": "1.8.2",
		"eslint-plugin-only-warn": "1.1.0",
		"eslint-plugin-prettier": "5.0.1",
		"postcss": "8.4.32",
		"prettier": "3.1.1",
		"tailwindcss": "3.3.6",
		"typescript": "5.3.3",
		"wrangler": "3.19.0"
	}
}
